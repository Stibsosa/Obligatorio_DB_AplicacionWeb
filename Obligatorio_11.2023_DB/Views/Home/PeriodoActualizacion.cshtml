@model Obligatorio_11._2023_DB.Models.PeriodoActualizacion

@{
    ViewData["Title"] = "PeriodoActualizacion";
}

<h1>Periodo de Actualizacion</h1>

    @if (ViewBag.Mensaje != null)
    {
        <p>Mensaje: @ViewBag.Mensaje</p>
    }

<h4>PeriodoActualizacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PeriodoActualizacion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Año</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semestre" class="control-label">Semestre</label>
                <input asp-for="Semestre" class="form-control" />
                <span asp-validation-for="Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fch_Inicio" class="control-label">Fecha Inicio</label>
                <input type="date" asp-for="Fch_Inicio" class="form-control" />
                <span asp-validation-for="Fch_Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fch_Fin" class="control-label">Fecha Fin</label>
                <input type="date" asp-for="Fch_Fin" class="form-control" />
                <span asp-validation-for="Fch_Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
